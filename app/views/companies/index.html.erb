<div>
  <%= link_to "Add Company", new_company_path %>

  <table class="table table-hover">
    <th>Company Name</th>
    <th>Data Rows</th>

    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to(company.company_name, :controller => 'companies', :action => 'show', :id => company.id) %></td>
        <td><%= company.company_datum.length %></td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @companies %>

</div>